<Window x:Class="CollectAdvice.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="処理中..." Height="150" Width="400" WindowStartupLocation="CenterOwner" 
        WindowStyle="ToolWindow" ResizeMode="NoResize" >
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock x:Name="m_MessageTextBlock" Text="処理中..." FontSize="16" HorizontalAlignment="Center"/>
            <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Width="300" Height="20"/>
        </StackPanel>
    </Grid>
</Window>